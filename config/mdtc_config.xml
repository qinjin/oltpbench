<?xml version="1.0"?>
<parameters>
	
    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://localhost:3306/tpcc</DBUrl>
    <username>user</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    
    <!-- Scale factor is the number of warehouses in TPCC -->
    <scalefactor>2</scalefactor>
    
    <!-- The workload -->
    <terminals>2</terminals>
    <works>
        <work>
          <time>60</time>
          <rate>10000</rate>
          <!-- <weights>45,43,4,4,4</weights> -->
          <weights>0,0,0,0,0,100</weights> 
        </work>
	</works>
	
	<!-- TPCC specific -->  
   	<transactiontypes>
    	<transactiontype>
    		<name>NewOrderExt</name>
    	</transactiontype>
    	<transactiontype>
    		<name>PaymentExt</name>
    	</transactiontype>
    	<transactiontype>
    		<name>OrderStatusExt</name>
    	</transactiontype>
    	<transactiontype>
    		<name>DeliveryExt</name>
    	</transactiontype>
    	<transactiontype>
    		<name>StockLevelExt</name>
    	</transactiontype>
    	<transactiontype>
    		<name>BatchedNewOrderExt</name>
    	</transactiontype>
   	</transactiontypes>	
</parameters>
